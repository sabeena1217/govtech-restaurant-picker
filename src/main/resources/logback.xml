<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="DEV_HOME" value="~"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] [%X{sessionId}] %-5p %c{1}:%L -%m%n
            </pattern>
        </encoder>
    </appender>


</configuration>